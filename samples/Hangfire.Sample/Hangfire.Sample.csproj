  </PropertyGroup>

  <ItemGroup>
    <None Remove=".DS_Store" />
    <None Remove="HangfireSampleDb" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire.AspNetCore" Version="1.8.0" />
